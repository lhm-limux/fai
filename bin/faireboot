#! /bin/bash

# $Id$
# reboot FAI correctly, Thomas Lange, Uni Koeln, copyright 2000-2012

faimond=0
. /usr/lib/fai/subroutines

[ -f /tmp/fai/variables.log ] && . /tmp/fai/variables.log

while getopts s opt ; do
        case "$opt" in
        s) fai-savelog -r ;;
        esac
done

name=`basename "$0"`
action="reboot"
[ "${name}" = "faipoweroff" ] && action="poweroff"

cd /
killall -STOP rcS
killall -q apt-get dpkg tar gzip yes cat syslogd

[ "X" == "X$SSH_CLIENT" -a  "$TERM" != "dumb" ] && killall -q sshd

fai-divert -R

mountpoint -q $FAI_ROOT/proc && umount $FAI_ROOT/proc
mountpoint -q $FAI_ROOT/dev/pts && umount $FAI_ROOT/dev/pts
umount -arf 2>/dev/null
killall udevd

sendmon "TASKEND reboot 0"
if [ "$action" = "reboot" ]; then
    echo "$HOSTNAME now rebooting"
else
    echo "$HOSTNAME now powering off"
fi

if [ "X" == "X$SSH_CLIENT" -a  "$TERM" != "dumb" ]; then
    if [ "$action" = "reboot" ]; then
        exec reboot -dfi
    else
        exec poweroff -dfi
    fi
else
    killall -CONT rcS
    killall rcS
    if [ "$action" = "reboot" ]; then
        init 6 &
    else
        init 0 &
    fi
fi

